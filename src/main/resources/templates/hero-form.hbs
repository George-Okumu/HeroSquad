{{#partial "content"}}
    <br>
    <div id="heroform1" class="card">
        <h4 class="text-center text-primary">Create your Superhero</h4>
        <form action="/heroesForm" method="POST" name="heroForm">
            <div class="form-group">
                <input type="text" class="form-control required" name="name" id="name" placeholder="Enter your favorite Hero name..." required>
            </div>

            <div class="form-group">
                <input type="number" class="form-control required" name="age" id="age" placeholder="Enter your favorite Hero age...." required>
            </div>

            <select  class="browser-default custom-select" name="specialPower">
                <option selected>Choose Hero Power</option>
                <option value="Flying">Flying</option>
                <option value="Super Speed">Super Speed</option>
                <option value="Shape-Shifting">Shape-Shifting</option>
                <option value="Telepathy">Telepathy</option>
                <option value="Super Senses">Super Senses</option>
                <option value="Invisible">Invisible</option>
                <option value="Clairvoyance">Clairvoyance</option>
                <option value="Hulking out">Hulking Out</option>
                <option value="Element Manipulation">Element Manipulation</option>
            </select><br><br>

            <select class="browser-default custom-select" name="weakness">
                <option selected>Choose Hero Weakness</option>
                <option value="Loud Noises">Loud Noises</option>
                <option value="Excessive Speed">Excessive Speed</option>
                <option value="Krypton-Radiation ">Krypton-Radiation</option>
                <option value="Fire">Fire</option>
                <option value="Yellow Color">Yellow color</option>
                <option value="Magic">Magic</option>
                <option value="Asbestos">Asbestos</option>
            </select>
            <br><br>
            <select class="form-control select2 mt15 mb0" name="bookAuthor" data-placeholder="Assign to Author">
                {{#if squads}}
                    <option label="- Assign to Squad -"></option>
                    {{#each squads}}
                        <option value="{{ id }}">{{ squadName }}</option>
                    {{/each}}
                {{else}}
                    <option label="- No Squads Created -"></option>
                {{/if}}
            </select><br><br>

            <button type="submit" class="btn btn-primary">Create Hero</button>
        </form>
    </div>
    </div>
{{/partial}}
{{> layout.hbs}}